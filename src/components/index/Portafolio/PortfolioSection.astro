---
import { Image } from 'astro:assets';
---

<div class='container'>
    <div class='section_heading is_portfolio'>
        <div class='row align-items-end'>
            <div class='col col-lg-6'>
                <h2 class='heading_subtitle'>
                    <span class='double_icon'>
                        <i class='fas fa-sharp fa-square-full'></i>
                        <i class='fas fa-sharp fa-square-full'></i>
                    </span>
                    <span>Nuestros Proyectos</span>
                </h2>
                <h3 class='heading_title mb-0'>Soluciones de Impacto</h3>
            </div>
            <div class='col col-lg-6'>
                <div
                    class='button-group filters-button-group m-0 justify-content-start justify-content-lg-end'
                >
                    <div class='portfolio_button has_bg_transparent'>
                        <button class='active' data-filter='*'>Ver Todo</button>
                        <button data-filter='.applications'>Aplicaciones</button
                        >
                        <button data-filter='.digital'>Digital</button>
                        <button data-filter='.chatbots'>Chatbots</button>
                        <button data-filter='.events'>Eventos</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class='grid row' id='portfolio-grid'>
        <div
            class='col col-lg-6 col-md-6 element-item applications'
            data-category='applications'
        >
            <div class='portfolio_item layout_grid text-center'>
                <div class='item_image'>
                    <a href='#!'>
                        <img
                            src='/assets/images/portfolio/siemprealerta.jpg'
                            alt='SiempreAlerta'
                        />
                    </a>
                </div>
                <div class='item_content'>
                    <ul class='category_list unordered_list_center'>
                        <li><a href='#!'>Aplicaciones</a></li>
                    </ul>
                    <h3 class='item_title mb-0'>
                        <a href='#!'> SiempreAlerta </a>
                    </h3>
                    <p class='item_description'>
                        Botonera de alerta que permite reportar emergencias
                        desde cualquier dispositivo móvil: incidentes
                        policiales, urgencias médicas, intervención de bomberos
                        o situaciones de violencia de género.
                    </p>
                </div>
            </div>
        </div>
        <div
            class='col col-lg-6 col-md-6 element-item applications'
            data-category='applications'
        >
            <div class='portfolio_item layout_grid text-center'>
                <div class='item_image'>
                    <a href='#!'>
                        <img
                            src='/assets/images/portfolio/turnero-digital.jpg'
                            alt='Turnero Digital'
                        />
                    </a>
                </div>
                <div class='item_content'>
                    <ul class='category_list unordered_list_center'>
                        <li><a href='#!'>Aplicaciones</a></li>
                    </ul>
                    <h3 class='item_title mb-0'>
                        <a href='#!'> Turnero Digital </a>
                    </h3>
                    <p class='item_description'>
                        Sistema de gestión de turnos que optimiza la atención y
                        reduce tiempos de espera.
                    </p>
                </div>
            </div>
        </div>
        <div
            class='col col-lg-6 col-md-6 element-item applications'
            data-category='applications'
        >
            <div class='portfolio_item layout_grid text-center'>
                <div class='item_image'>
                    <a href='https://qrz.app' target='_blank'>
                        <img
                            src='/assets/images/portfolio/qrz-app.jpg'
                            alt='QRZ App'
                        />
                    </a>
                </div>
                <div class='item_content'>
                    <ul class='category_list unordered_list_center'>
                        <li><a href='#!'>Aplicaciones</a></li>
                    </ul>
                    <h3 class='item_title mb-0'>
                        <a href='https://qrz.app' target='_blank'> QRZ App </a>
                    </h3>
                    <p class='item_description'>
                        Red social que conecta, comparte y explora comunidades
                        específicas de forma personalizada.
                    </p>
                </div>
            </div>
        </div>
        <div
            class='col col-lg-6 col-md-6 element-item digital'
            data-category='digital'
        >
            <div class='portfolio_item layout_grid text-center'>
                <div class='item_image'>
                    <a href='#!'>
                        <img
                            src='/assets/images/portfolio/escuela-negocios.jpg'
                            alt='Escuela de Negocios Digitales'
                        />
                    </a>
                </div>
                <div class='item_content'>
                    <ul class='category_list unordered_list_center'>
                        <li><a href='#!'>Digital</a></li>
                    </ul>
                    <h3 class='item_title mb-0'>
                        <a href='#!'> Escuela de Negocios Digitales </a>
                    </h3>
                    <p class='item_description'>
                        Plataforma educativa con cursos de alto impacto social
                        para el desarrollo de habilidades digitales.
                    </p>
                </div>
            </div>
        </div>
        <div
            class='col col-lg-6 col-md-6 element-item events'
            data-category='events'
        >
            <div class='portfolio_item layout_grid text-center'>
                <div class='item_image'>
                    <a href='#!'>
                        <img
                            src='/assets/images/portfolio/esports-events.jpg'
                            alt='Eventos Esports'
                        />
                    </a>
                </div>
                <div class='item_content'>
                    <ul class='category_list unordered_list_center'>
                        <li><a href='#!'>Eventos</a></li>
                    </ul>
                    <h3 class='item_title mb-0'>
                        <a href='#!'> Organización de Torneos Esports </a>
                    </h3>
                    <p class='item_description'>
                        Gestión profesional de torneos y eventos de deportes
                        electrónicos con experiencias inmersivas para jugadores
                        y audiencia.
                    </p>
                </div>
            </div>
        </div>
        <div
            class='col col-lg-6 col-md-6 element-item chatbots'
            data-category='chatbots'
        >
            <div class='portfolio_item layout_grid text-center'>
                <div class='item_image'>
                    <a href='#!'>
                        <img
                            src='/assets/images/portfolio/ai-chatbot.jpg'
                            alt='ChatBot IA'
                        />
                    </a>
                </div>
                <div class='item_content'>
                    <ul class='category_list unordered_list_center'>
                        <li><a href='#!'>Chatbots</a></li>
                    </ul>
                    <h3 class='item_title mb-0'>
                        <a href='#!'> ChatBot IA para Asistencia Ciudadana </a>
                    </h3>
                    <p class='item_description'>
                        Asistente virtual inteligente que responde consultas
                        manteniendo el contexto de la conversación. Incluye
                        panel administrativo para gestionar contenidos
                        informativos relevantes.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class='btn_wrap pt-4 pb-0 text-center'>
        <a href='#!' class='bd-btn-link btn_primary'>
            <span class='bd-button-content-wrapper'>
                <span class='bd-button-icon'>
                    <i class='fa-light fa-arrow-right-long'></i>
                </span>
                <span class='pd-animation-flip'>
                    <span class='bd-btn-anim-wrapp'>
                        <span class='bd-button-text'
                            >Ver Todos los Proyectos</span
                        >
                        <span class='bd-button-text'
                            >Ver Todos los Proyectos</span
                        >
                    </span>
                </span>
            </span>
        </a>
    </div>
</div>

<style>
    .item_description {
        margin-top: 10px;
        font-size: 14px;
        color: #666;
    }

    .element-item {
        transition: all 0.5s ease;
        margin-bottom: 30px;
    }

    .element-item.hidden {
        display: none;
    }

    .portfolio_button button {
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .portfolio_button button.active {
        font-weight: bold;
    }

    .portfolio_item {
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        height: 100%;
    }

    .item_image {
        height: 350px;
        overflow: hidden;
        position: relative;
        background-color: #f5f5f5;
    }

    .item_image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center top;
        transition: transform 0.7s ease;
    }

    .item_image:hover img {
        transform: scale(1.05);
    }

    .item_content {
        padding: 20px;
        background-color: white;
    }

    .category_list {
        margin-bottom: 10px;
    }

    .item_title {
        margin-bottom: 10px;
    }
</style>

<script>
    // Esperar a que el DOM esté completamente cargado
    document.addEventListener('DOMContentLoaded', function () {
        // Obtener todos los botones de filtro
        const filterButtons = document.querySelectorAll(
            '.portfolio_button button'
        );
        // Obtener todos los elementos del portafolio
        const portfolioItems = document.querySelectorAll('.element-item');

        // Agregar evento de clic a cada botón de filtro
        filterButtons.forEach((button) => {
            button.addEventListener('click', function () {
                // Eliminar la clase 'active' de todos los botones
                filterButtons.forEach((btn) => btn.classList.remove('active'));
                // Agregar la clase 'active' al botón actual
                this.classList.add('active');

                // Obtener el valor del filtro
                const filterValue = this.getAttribute('data-filter');

                // Filtrar los elementos del portafolio
                portfolioItems.forEach((item) => {
                    if (filterValue === '*') {
                        // Mostrar todos los elementos
                        item.classList.remove('hidden');
                    } else if (
                        item.classList.contains(filterValue.substring(1))
                    ) {
                        // Mostrar elementos que coinciden con el filtro
                        item.classList.remove('hidden');
                    } else {
                        // Ocultar elementos que no coinciden con el filtro
                        item.classList.add('hidden');
                    }
                });
            });
        });
    });
</script>
