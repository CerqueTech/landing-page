---
import { Image } from 'astro:assets';
import { getLangFromUrl } from '../../../i18n/utils';
import getData from '../../../services/data';

const lang = getLangFromUrl(Astro.url);
const data = await getData(`${lang}/index/portafolio`);
if (!data) {
    return Astro.redirect('/404');
}
---

<div class='container'>
    <div class='section_heading is_portfolio'>
        <div class='row align-items-end'>
            <div class='col col-lg-6'>
                <h2 class='heading_subtitle'>
                    <span class='double_icon'>
                        <i class='fas fa-sharp fa-square-full'></i>
                        <i class='fas fa-sharp fa-square-full'></i>
                    </span>
                    <span>{data.span1}</span>
                </h2>
                <h3 class='heading_title mb-0'>{data.h3}</h3>
            </div>
            <div class='col col-lg-6'>
                <div
                    class='button-group filters-button-group m-0 justify-content-start justify-content-lg-end'
                >
                    <div class='portfolio_button has_bg_transparent'>
                        <button class='active' data-filter='*'>{data.filterAll}</button>
                        <button data-filter='.applications'>{data.filterApps}</button
                        >
                        <button data-filter='.digital'>{data.filterDigital}</button>
                        <button data-filter='.chatbots'>{data.filterChatbots}</button>
                        <button data-filter='.events'>{data.filterEvents}</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class='grid row' id='portfolio-grid'>
        <div
            class='col col-lg-6 col-md-6 element-item applications'
            data-category='applications'
        >
            <div class='portfolio_item layout_grid text-center'>
                <div class='item_image'>
                    <a href='#!'>
                        <img
                            src='/assets/images/portfolio/siemprealerta.jpg'
                            alt='SiempreAlerta'
                        />
                    </a>
                </div>
                <div class='item_content'>
                    <ul class='category_list unordered_list_center'>
                        <li><a href='#!'>{data.project1Category}</a></li>
                    </ul>
                    <h3 class='item_title mb-0'>
                        <a href='#!'> {data.project1Title} </a>
                    </h3>
                    <p class='item_description'>
                        {data.project1Desc}
                    </p>
                </div>
            </div>
        </div>
        <div
            class='col col-lg-6 col-md-6 element-item applications'
            data-category='applications'
        >
            <div class='portfolio_item layout_grid text-center'>
                <div class='item_image'>
                    <a href='#!'>
                        <img
                            src='/assets/images/portfolio/turnero-digital.jpg'
                            alt='Turnero Digital'
                        />
                    </a>
                </div>
                <div class='item_content'>
                    <ul class='category_list unordered_list_center'>
                        <li><a href='#!'>{data.project2Category}</a></li>
                    </ul>
                    <h3 class='item_title mb-0'>
                        <a href='#!'> {data.project2Title} </a>
                    </h3>
                    <p class='item_description'>
                        {data.project2Desc}
                    </p>
                </div>
            </div>
        </div>
        <div
            class='col col-lg-6 col-md-6 element-item applications'
            data-category='applications'
        >
            <div class='portfolio_item layout_grid text-center'>
                <div class='item_image'>
                    <a href='https://qrz.app' target='_blank'>
                        <img
                            src='/assets/images/portfolio/qrz-app.jpg'
                            alt='QRZ App'
                        />
                    </a>
                </div>
                <div class='item_content'>
                    <ul class='category_list unordered_list_center'>
                        <li><a href='#!'>{data.project3Category}</a></li>
                    </ul>
                    <h3 class='item_title mb-0'>
                        <a href='https://qrz.app' target='_blank'> {data.project3Title} </a>
                    </h3>
                    <p class='item_description'>
                        {data.project3Desc}
                    </p>
                </div>
