---
import getData from '../../services/data';
import Logo from '../environment/Logo/Logo';
import { Image } from 'astro:assets';

interface Props {
    lang: string;
}
const currentYear = new Date().getFullYear();
const { lang } = Astro.props;
const data = await getData(`${lang}/enviroment/footer`);
const contact = lang === 'es' ? '/es/contactanos' : '/en/contact';
---

<div
    class='calltoaction_section style_3 section_space_lg bg_primary text-center decoration_wrap'
>
    <div class='overlay'></div>
    <div class='container'>
        <div class='deco_item cta_image floating-img'>
            <Image
                class='animation-img'
                src='/assets/images/calltoaction/cta_image_3.png'
                alt='Imagen de Llamada a la Acción de CerqueTech Solutions'
                width={600}
                height={600}
            />
        </div>
        <div class='section_heading text-white'>
            <h2 class='heading_title'>{data.headTitle}</h2>
            <p class='heading_description mb-0'>
                {data.bottomTitle}
            </p>
        </div>
        <a href={contact} class='bd-btn-link btn_warning'>
            <span class='bd-button-content-wrapper'>
                <span class='bd-button-icon'>
                    <i class='fa-light fa-arrow-right-long'></i>
                </span>
                <span class='pd-animation-flip'>
                    <span class='bd-btn-anim-wrapp'>
                        <span class='bd-button-text'>{data.bottom}</span>
                        <span class='bd-button-text'>{data.bottom}</span>
                    </span>
                </span>
            </span>
        </a>
    </div>
</div>

<div class='footer_widget_area'>
    <div class='container'>
        <div class='row'>
            <div class='col col-lg-3 col-md-6'>
                <div class='site_logo'>
                    <a class='site_link' href={'/' + lang} data-astro-reload>
                        <Logo
                            alt='Logo de CerqueTech Solutions'
                            srcdark='/assets/images/logo/white_with.png'
                            srcwith='/assets/images/logo/dark_with_icon_color.png'
                            client:only='react'
                        />
                    </a>
                </div>
            </div>
            <div class='col col-lg-3 col-md-6'>
                <div class='footer_widget'>
                    <h3 class='footer_widget_title'>{data.widget1Ttitle}</h3>
                    <div class='icon_list_widget'>
                        <h4 class='widget_title mb-0'>{data.widget1Titlep}</h4>
                        <ul class='icon_list unordered_list_block'>
                            <li>
                                <a
                                    href='mailto:mateo.cerquetella@cerquetech.com'
                                >
                                    <span class='list_item_text'>
                                        mateo.cerquetella@cerquetech.com</span
                                    >
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class='col col-lg-3 col-md-6'>
                <div class='footer_widget'>
                    <h3 class='footer_widget_title'>{data.widget2Title}</h3>
                    <div class='icon_list_widget'>
                        <ul class='icon_list unordered_list_block'>
                            <li>
                                <a>
                                    <span class='d-block mb-2'> </span>
                                    <span class='list_item_text'>
                                        {data.widget2Titlep}
                                    </span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class='col col-lg-3 col-md-6'>
                <div class='footer_widget'>
                    <h3 class='footer_widget_title'>{data.newsletter}</h3>
                    <form action='#'>
                        <div class='small_newsletter_form'>
                            <input
                                type='email'
                                id='email'
                                placeholder={data.newsletterPlace}
                                autocomplete='email'
                            />
                            <button type='submit'>
                                <i class='far fa-arrow-right'></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class='footer_bottom'>
    <div class='container'>
        <div class='footer_bottom_grid'>
            <div class='copyright_widget'>
                {data.copyright} © 2023-{currentYear}
                {data.by}
                <a target='_blank' href='https://www.cerquetech.com'
                    ><u>CerqueTech Solutions™</u></a
                >
                {data.copyright1}
            </div>
        </div>
    </div>
</div>

<style>
    .overlay {
        background-image: linear-gradient(
            180deg,
            #5355df 0%,
            rgba(83, 85, 223, 0.45) 18.75%,
            rgba(83, 85, 223, 0.2) 47.4%,
            rgba(83, 85, 223, 0.45) 82.81%,
            #5355df 100%
        );
        border-bottom: 6px solid #ffc961;
        border-top: 6px solid #ffc961;
    }

    .floating-img {
        top: 50%;
        inset-inline-start: 50%;
        z-index: -2;
        max-width: 340px;
        -webkit-transform: translate(-50%, -50%);
        -moz-transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        -o-transform: translate(-50%, -50%);
        transform: translate(-50%, -50%);
    }

    .animation-img {
        animation: upDown 1s infinite alternate;
    }

    .container {
        width: 100%;
        padding: 15px;
        margin-right: auto;
        margin-left: auto;
    }

    img {
        max-width: 100%;
        height: auto;
    }

    @media (max-width: 767px) {
        .footer_widget_area .row {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }

        .footer_widget_area .col {
            flex: 0 0 100%;
            max-width: 100%;
            margin-bottom: 20px;
        }

        .footer_widget form {
            display: flex;
            flex-direction: column;
        }

        .footer_widget form .form-check {
            margin-top: 10px;
        }
    }

    .footer_social {
        text-align: right;
    }

    .footer_social .social_icon {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .footer_social .social_icon li {
        display: inline-block;
        margin-right: 10px;
    }

    .footer_social .social_icon li:last-child {
        margin-right: 0;
    }
</style>
