---
const currentYear = new Date().getFullYear();
---

<div class="calltoaction_section style_5">
  <div class="container">
    <div class="content_box bg_primary decoration_wrap">
      <div class="row align-items-center">
        <div class="col col-xxl-5 col-xl-6 col-lg-6 order-last">
          <div class="cta_image">
            <img
              src="assets/images/calltoaction/cta_image_5.png"
              alt="Imagen de Llamada a la Acción de CerqueTech Solutions"
            />
          </div>
        </div>
        <div class="col col-xxl-7 col-xl-6 col-lg-6">
          <div class="wrapper_box mb-4 mb-lg-0">
            <div class="section_heading text-white">
              <h2 class="heading_title mb-0">Creemos algo asombroso juntos.</h2>
            </div>
            <a href="mateocerquetella.html" class="bd-btn-link btn_warning">
              <span class="bd-button-content-wrapper">
                <span class="bd-button-icon">
                  <i class="fa-light fa-arrow-right-long"></i>
                </span>
                <span class="pd-animation-flip">
                  <span class="bd-btn-anim-wrapp">
                    <span class="bd-button-text">Empezar</span>
                    <span class="bd-button-text">Empezar</span>
                  </span>
                </span>
              </span>
            </a>
          </div>
        </div>
      </div>
      <div class="deco_item shape_1">
        <img src="assets/images/shapes/shape_4.svg" />
      </div>
    </div>
  </div>
</div>

<div class="footer_widget_area">
  <div class="container">
    <div class="row">
      <div class="col col-lg-3 col-md-6">
        <div class="site_logo">
          <a class="site_link" href="index.html">
            <img
              style="height: 150px;margin-top: -2em;"
              src="assets/images/logo/white.png"
              alt="Logo de CerqueTech Solutions"
            />
          </a>
        </div>
      </div>
      <div class="col col-lg-3 col-md-6">
        <div class="footer_widget">
          <h3 class="footer_widget_title">Contactanos</h3>
          <div class="icon_list_widget">
            <h4 class="widget_title mb-0">
              Si deseas empezar un nuevo proyecto:
            </h4>
            <ul class="icon_list unordered_list_block">
              <li>
                <a href="mailto:mateocerquetella@cerquetech.com">
                  <span class="list_item_text">
                    mateocerquetella@cerquetech.com</span
                  >
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="col col-lg-3 col-md-6">
        <div class="footer_widget">
          <h3 class="footer_widget_title">Encuéntranos</h3>
          <div class="icon_list_widget">
            <ul class="icon_list unordered_list_block">
              <li>
                <a href="mailto:mateocerquetella@cerquetech.com">
                  <span class="d-block mb-2"> </span>
                  <span class="list_item_text">
                    San Miguel CP1613, Buenos Aires, Argentina
                  </span>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="col col-lg-3 col-md-6">
        <div class="footer_widget">
          <h3 class="footer_widget_title">Newsletter</h3>
          <form action="#">
            <div class="small_newsletter_form">
              <input
                type="email"
                id="email"
                placeholder="Dirección de Email"
                autocomplete="email"
              />
              <button type="submit">
                <i class="far fa-arrow-right"></i>
              </button>
            </div>
            <!-- <div class="form-check mb-0">
              <input type="checkbox" id="checkMeOut" />
              <label id="check" for="checkMeOut">Check me out</label>
            </div> -->
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="footer_bottom">
  <div class="container">
    <div class="footer_bottom_grid">
      <div class="copyright_widget">
        Derechos de Autor © 2023-{currentYear} por <a
          target="_blank"
          href="https://www.cerquetech.com"><u>CerqueTech Solutions™</u></a
        > Todos los derechos reservados.
      </div>
      <!-- <div class="footer_social">
        <ul class="social_icon unordered_list_end">
          <li><a href="#!"><i class="fab fa-facebook-f"></i></a></li>
          <li><a href="#!"><i class="fab fa-twitter"></i></a></li>
          <li><a href="#!"><i class="fab fa-youtube"></i></a></li>
        </ul>
      </div> -->
    </div>
  </div>
</div>

<style>
  .container {
    width: 100%;
    padding: 15px;
    margin-right: auto;
    margin-left: auto;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  @media (max-width: 767px) {
    .footer_widget_area .row {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
    }

    .footer_widget_area .col {
      flex: 0 0 100%;
      max-width: 100%;
      margin-bottom: 20px;
    }

    .footer_widget form {
      display: flex;
      flex-direction: column;
    }

    .footer_widget form .form-check {
      margin-top: 10px;
    }
  }

  .footer_social {
    text-align: right;
  }

  .footer_social .social_icon {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer_social .social_icon li {
    display: inline-block;
    margin-right: 10px;
  }

  .footer_social .social_icon li:last-child {
    margin-right: 0;
  }
</style>
