---
import IconBox from "./IconBox.astro";
import PaginationWrap from "./PaginationWrap.astro";
import getData from "../../services/data";
interface Props {
  lang: string;
  portfolio: string;
}

const { lang, portfolio } = Astro.props;
const data = await getData(`${lang}/portfolio/${portfolio}`);
---

<div class="container">
  <div class="section_space_md pt-0">
    <div class="details_item_image">
      <img src={data.portfolioImgSrc} alt={data.portfolioImgAlt} />
    </div>
  </div>
  <div class="details_content_wrap">
    <div class="row align-items-center">
      <div class="col col-lg-6">
        <div class="section_heading mb-0 mb-lg-5">
          <h2 class="heading_title mb-0">{data.headingTitle}</h2>
        </div>
      </div>
      <div class="col col-lg-6">
        <p>
          {data.p}
        </p>
      </div>
    </div>
    <div class="details_info_box">
      <div class="row">
        <div class="col col-lg-3 col-md-6 col-md-6 col-sm-6">
          <span>{data.detailsSpan}</span>
          <strong>{data.detailsStrong}</strong>
        </div>
        <div class="col col-lg-3 col-md-6 col-md-6 col-sm-6">
          <span>{data.detailsSpan1}</span>
          <strong>{data.detailsStrong1}</strong>
        </div>
        <div class="col col-lg-3 col-md-6 col-md-6 col-sm-6">
          <span>{data.detailsSpan2}</span>
          <strong>{data.detailsStrong2}</strong>
        </div>
        <div class="col col-lg-3 col-md-6 col-md-6 col-sm-6">
          <span>{data.detailsSpan3}</span>
          <strong>{data.detailsStrong3}</strong>
        </div>
      </div>
    </div>
    <h3 class="details_item_info_title mb-3">{data.ourPlaningTitle}</h3>
    <p>
      {data.ourPlaningP}
    </p>
    <div class="row mb-5">
      <IconBox title={data.iconTitle} p={data.iconP} />
      <IconBox title={data.iconTitle1} p={data.iconP1} />
      <IconBox title={data.iconTitle2} p={data.iconP2} />
      <div class="row justify-content-lg-between mb-5">
        <div class="col col-lg-4">
          <div class="details_sectio_content mb-4 mb-lg-0">
            <div class="section_heading">
              <h2 class="heading_title">{data.whatWeDidTitle}</h2>
            </div>
            <a href="#" data-astro-reload class="bd-btn-link btn-primary">
              <span class="bd-button-content-wrapper">
                <span class="bd-button-icon">
                  <i class="fa-light fa-arrow-right-long"></i>
                </span>
                <span class="pd-animation-flip">
                  <span class="bd-btn-anim-wrapp">
                    <span class="bd-button-text">{data.whatWeDIdSpan}</span>
                    <span class="bd-button-text">{data.whatWeDIdSpan}</span>
                  </span>
                </span>
              </span>
            </a>
          </div>
        </div>
        <div class="col col-lg-6">
          <p>
            {data.whatWeDidP}
          </p>
          <ul class="icon_list unordered_list_block">
            <li>
              <span class="list_item_icon">
                <i class="fas fa-check"></i>
              </span>
              <span class="list_item_text">{data.whatWeDidL1}</span>
            </li>
            <li>
              <span class="list_item_icon">
                <i class="fas fa-check"></i>
              </span>
              <span class="list_item_text">{data.whatWeDidL2}</span>
            </li>
            <li>
              <span class="list_item_icon">
                <i class="fas fa-check"></i>
              </span>
              <span class="list_item_text">{data.whatWeDidL3}</span>
            </li>
          </ul>
        </div>
      </div>
      <div class="row mb-4">
        <div class="col col-md-6">
          <div class="details_item_image m-0">
            <img src={data.detailsImgSrc} alt={data.detailsImgAlt} />
          </div>
        </div>
        <div class="col col-md-6">
          <div class="details_item_image m-0">
            <img src={data.detailsImgSrc1} alt={data.detailsImgAlt1} />
          </div>
        </div>
      </div>

      <h3 class="details_item_info_title mb-3">{data.finalTitle}</h3>
      <p>
        {data.finalP}
      </p>

      <div class="social_wrap">
        <h3 class="social_title text-uppercase">{data.h3}</h3>
        <ul class="social_icon unordered_list_end">
          <li>
            <a href={data.iconFacebookHref}
              ><i class="fab fa-facebook-f"></i></a>
          </li>
          <li>
            <a href={data.iconTwitterHref}><i class="fab fa-twitter"></i></a>
          </li>
          <li>
            <a href={data.iconYoutubeHref}><i class="fab fa-youtube"></i></a>
          </li>
        </ul>
      </div>

      <PaginationWrap
        btnTxtNext={data.btnTxtNext}
        btnTxtPrev={data.btnTxtPrev}
      />
    </div>
  </div>
</div>
