---
import { Image } from 'astro:assets';

interface Props {
    icon: string;
    title: string;
    txt: string;
}
const { icon, title, txt } = Astro.props;
---

<div class='iconbox_item bg-white'>
    <div class='item_icon'>
        <Image src={icon} alt='Icon Eye White' width={50} height={50} />
    </div>
    <div class='item_content'>
        <h3 class='item_title'>{title}</h3>
        <p class='mb-0'>
            {txt}
        </p>
    </div>
</div>

<style>
    .iconbox_item {
        height: auto;
        margin: 10px;
        height: 95%;
    }
</style>
