---
export interface Props {
  icon?: string;
  title: string;
  description: string;
}
const { icon, title, description } = Astro.props;
---

<div class="service_item style_3">
  <div class="item_icon">
    <i class={icon}></i>
  </div>
  <div class="item_content">
    <h3 class="item_title">{title}</h3>
    <p class="item_description">
      {description}
    </p>
  </div>
  <a class="btn-link">
    <span class="btn_text">Ver detalles</span>
    <span class="btn_icon">
      <img src="assets/images/icons/icon_arrow_down_right_dark.svg" />
      <img src="assets/images/icons/icon_arrow_down_right_primary.svg" />
    </span>
  </a>
</div>
