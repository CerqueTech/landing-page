---
import BannerSection from "../components/environment/BannerSection.astro";
import ContactForm from "../components/contact/ContactForm.jsx";
import FaqSection from "../components/contact/FaqSection.astro";
import Layout from "../layouts/Layout.astro";
import WhatsAppButton from "../components/environment/WhatsAppButton/WhatsAppButton";
---

<Layout transition:persist title="Contacto" menu="">
  <WhatsAppButton transition:persist client:only="react" />
  <section class="page_banner text-center">
    <BannerSection
      title="Contactanos"
      ahref="/"
      aText="Inicio"
      liText="Contacto"
    />
  </section>
  <section class="contact-section contact_form_section">
    <ContactForm client:only="react" />
  </section>
  <section class="faq_section section_space_lg">
    <FaqSection />
  </section>
</Layout>
