---
const projects = [
  {
    title: 'E-commerce Platform',
    category: 'Web Development',
    description: 'A full-featured e-commerce platform with inventory management, payment processing, and customer analytics.',
    image: '/portfolio/ecommerce.jpg',
    tags: ['React', 'Node.js', 'MongoDB', 'Stripe']
  },
  {
    title: 'Healthcare Mobile App',
    category: 'Mobile Development',
    description: 'A mobile application for healthcare providers to manage patient records, appointments, and telemedicine services.',
    image: '/portfolio/healthcare.jpg',
    tags: ['React Native', 'Firebase', 'HIPAA Compliant']
  },
  {
    title: 'Financial Dashboard',
    category: 'Web Development',
    description: 'An interactive financial dashboard for tracking investments, expenses, and financial goals with data visualization.',
    image: '/portfolio/finance.jpg',
    tags: ['Vue.js', 'D3.js', 'Express', 'PostgreSQL']
  },
  {
    title: 'Real Estate Platform',
    category: 'Web Development',
    description: 'A real estate platform with property listings, virtual tours, and agent management features.',
    image: '/portfolio/realestate.jpg',
    tags: ['Next.js', 'Tailwind CSS', 'Prisma', 'AWS']
  },
  {
    title: 'Logistics Management System',
    category: 'Enterprise Software',
    description: 'A comprehensive logistics management system for tracking shipments, managing inventory, and optimizing delivery routes.',
    image: '/portfolio/logistics.jpg',
    tags: ['Angular', 'Java Spring', 'MySQL', 'Docker']
  },
  {
    title: 'Social Media App',
    category: 'Mobile Development',
    description: 'A social media application focused on connecting professionals in creative industries.',
    image: '/portfolio/social.jpg',
    tags: ['Flutter', 'GraphQL', 'Firebase', 'AWS Amplify']
  }
];

const categories = ['All', 'Web Development', 'Mobile Development', 'Enterprise Software', 'UI/UX Design'];
---

<section id="portfolio" class="section">
  <div class="container">
    <h2 class="section-title">Our Portfolio</h2>
    <p class="section-subtitle">
      Explore our recent projects and see how we've helped businesses achieve their digital goals.
    </p>
    
    <!-- Filter Buttons -->
    <div class="flex flex-wrap justify-center gap-2 mb-12">
      {categories.map(category => (
        <button 
          class="filter-btn px-4 py-2 rounded-full border border-gray-300 text-gray-700 hover:bg-primary hover:text-white hover:border-primary transition-colors"
          data-category={category}
        >
          {category}
        </button>
      ))}
    </div>
    
    <!-- Projects Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 portfolio-grid">
      {projects.map(project => (
        <div class="card overflow-hidden group portfolio-item animate__animated animate__fadeIn" data-category={project.category}>
          <!-- Project Image -->
          <div class="relative overflow-hidden h-48">
            <img 
              src={project.image} 
              alt={project.title} 
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
            />
            <div class="absolute inset-0 bg-primary/70 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <a href="#" class="btn bg-white text-primary hover:bg-white/90">View Project</a>
            </div>
          </div>
          
          <!-- Project Info -->
          <div class="p-6">
            <span class="text-sm text-primary font-medium">{project.category}</span>
            <h3 class="text-xl font-bold mt-1 mb-2">{project.title}</h3>
            <p class="text-gray-600 mb-4">{project.description}</p>
            
            <!-- Tags -->
            <div class="flex flex-wrap gap-2">
              {project.tags.map(tag => (
                <span class="text-xs bg-gray-100 text-gray-700 px-2 py-1 rounded-full">{tag}</span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<script>
  // Portfolio filtering
  document.addEventListener('DOMContentLoaded', () => {
    const filterBtns = document.querySelectorAll('.filter-btn');
    const portfolioItems = document.querySelectorAll('.portfolio-item');
    
    // Set active class for "All" button by default
    const allBtn = document.querySelector('[data-category="All"]');
    if (allBtn) allBtn.classList.add('bg-primary', 'text-white', 'border-primary');
    
    filterBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        // Remove active class from all buttons
        filterBtns.forEach(b => {
          b.classList.remove('bg-primary', 'text-white', 'border-primary');
        });
        
        // Add active class to clicked button
        btn.classList.add('bg-primary', 'text-white', 'border-primary');
        
        const category = btn.getAttribute('data-category');
        
        // Filter items
        portfolioItems.forEach(item => {
          const itemCategory = item.getAttribute('data-category');
          
          if (category === 'All' || category === itemCategory) {
            item.style.display = 'block';
            // Add animation
            item.classList.remove('animate__fadeIn');
            void item.offsetWidth; // Trigger reflow
            item.classList.add('animate__fadeIn');
          } else {
            item.style.display = 'none';
          }
        });
      });
    });
  });
</script> 